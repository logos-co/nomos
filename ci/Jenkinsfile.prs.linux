pipeline {
  agent {
    dockerfile {
      label 'linux'
      dir 'ci'
    }
  }

  environment {
    /* Avoid cache poisoning by other jobs. */
    GOCACHE = "${env.WORKSPACE_TMP}/go-build"
    GOPATH  = "${env.WORKSPACE_TMP}/go"
  }

  options {
    disableConcurrentBuilds()
    buildDiscarder(logRotator(
      numToKeepStr: '20',
      daysToKeepStr: '30',
    ))
  }

  stages {
    stage('Check') {
      steps {
        sh 'cargo check --all --features waku'
        sh 'cargo check --all --features libp2p'
        sh 'cargo fmt -- --check'
        sh 'cargo clippy --all --features waku -- --deny warnings'
        sh 'cargo clippy --all --features libp2p -- --deny warnings'
      }
    }

    stage('Build') {
      steps {
        sh 'cargo build'
        sh 'cargo build --all --features waku'
        sh 'cargo build --all --features libp2p'
      }
    }

    stage('Test') {
      steps {
        sh 'cargo test --all --features waku'
        sh 'cargo test --all --features libp2p'
      }
    }
  }
  post {
    cleanup { cleanWs() }
  }
}
